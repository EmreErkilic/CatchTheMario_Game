<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mariobackground"
    tools:context=".Easy">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreEasy"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/timeTextEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Time: 10"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTextEasy"
        android:layout_width="156dp"
        android:layout_height="52dp"
        android:layout_marginBottom="84dp"
        android:text="Score: 0"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:onClick="menuEasy"
        android:text="Menu"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreTextEasy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>