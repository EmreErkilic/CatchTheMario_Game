<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mariobackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hard">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="IncreaseScoreHard"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/mario" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/timeTextHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Time: 10"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTextHard"
        android:layout_width="141dp"
        android:layout_height="54dp"
        android:layout_marginBottom="68dp"
        android:text="Score: 0"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:onClick="menuHard"
        android:text="Menu"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreTextHard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>